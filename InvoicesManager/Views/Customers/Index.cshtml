@model IEnumerable<InvoicesManager.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h2 class="text-center">Customers</h2>

    @Html.ActionLink("ADD NEW CUSTOMER", "Create", null, new { @class = "btn btn-primary" })

    <form class="form-inline my-2">

        Find by name or TAX number: @Html.TextBox("SearchString", null, new { @class = "form-control" })
        <button class="btn btn-secondary my-2 my-sm-0 pull-right" type="submit">Search</button>
    </form>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NIP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    Customer operations
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>
                        @Html.DisplayFor(modelItem => item.Name)<br />
                        <small>
                            @Html.DisplayFor(modelItem => item.Address)<br />
                            @Html.DisplayFor(modelItem => item.ZipCode),
                            @Html.DisplayFor(modelItem => item.City)
                        </small>
                    </p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
